<Window x:Class="DfWGXX.DfWGXXWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:c="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:ns="clr-namespace:ItoKonnyaku.Mvvm;assembly=TRPGManage"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:ItoKonnyaku.TrpgManage;assembly=TRPGManage"
        xmlns:dd="urn:gong-wpf-dragdrop"
        mc:Ignorable="d"
        
        Title="どぶくろ！"
        
        FontSize="16"
        VerticalAlignment="Center"
        VerticalContentAlignment="Center"
        
        xmlns:dc="clr-namespace:ItoKonnyaku.TrpgManage;assembly=TRPGManage"
        d:DataContext="{d:DesignInstance dc:IntelliTrpgManageBaseXX, IsDesignTimeCreatable=True}"
        
        Left  ="{Binding Data.WindowSetting.WindowPosSize[0] , Mode=TwoWay}"
        Top   ="{Binding Data.WindowSetting.WindowPosSize[1] , Mode=TwoWay}"
        Width ="{Binding Data.WindowSetting.WindowPosSize[2] , Mode=TwoWay}"
        Height="{Binding Data.WindowSetting.WindowPosSize[3] , Mode=TwoWay}"
        
        Icon="icon/kemoaka_0001.ico"
        
    >

    <Window.Resources>
        <local:DoubleGridLengthConverter x:Key="DoubleGridLengthConverter"/>
        <ns:Radio2EnumConverter x:Key="EnumConverter"/>
        <BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />

        <Storyboard x:Key="CutIn">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="canvas">
                <EasingDoubleKeyFrame KeyTime="0" Value="-100"/>
                <SplineDoubleKeyFrame KeyTime="0:0:2" Value="-200" KeySpline="0,0.6,1,1"/>
                <SplineDoubleKeyFrame KeyTime="0:0:3" Value="-400" KeySpline="0,0,1,0.10"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="canvas">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.5" Value="1" KeySpline="0,0.6,1,1"/>
                <SplineDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
                <SplineDoubleKeyFrame KeyTime="0:0:3" Value="0" KeySpline="0,0,1,0.10"/>
            </DoubleAnimationUsingKeyFrames>

        </Storyboard>

    </Window.Resources>


    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding ClosingCommand}" />
        </i:EventTrigger>
        <ei:DataTrigger Binding="{Binding Data.WindowSetting.CutIn.CutInTrigger, Mode=OneWay}" Value="True">
            <ei:ControlStoryboardAction Storyboard="{StaticResource CutIn}"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding Data.WindowSetting.CutIn.CutInTrigger, Mode=OneWay}" Value="True" Comparison="NotEqual">
            <ei:ControlStoryboardAction Storyboard="{StaticResource CutIn}" ControlStoryboardOption="Stop"/>
        </ei:DataTrigger>
    </i:Interaction.Triggers>


    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700*" />
            <ColumnDefinition Width="Auto"  />
            <ColumnDefinition Width="{Binding Data.WindowSetting.ConsoleWidth, Mode=TwoWay, Converter={StaticResource DoubleGridLengthConverter}}"   />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0">
            <WebBrowser x:Name="uWebBrowser" 
                        ns:WebBrowserUtility.BindableSource="{Binding Data.Server.ServerInfo.Url, Mode=OneWay}" 
                        ns:WebBrowserUtility.HideScrollBar="True"/>
        </DockPanel>

        <GridSplitter Grid.Column="1" Width="10" HorizontalAlignment="Center" Background="DarkCyan"/>

        <DockPanel Grid.Column="2">

            <!--[常時]メニュー欄-->

            <!--[常時]キャラ選択欄-->
            <Grid DockPanel.Dock="Top" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="キャラ選択："/>
                <ComboBox  Grid.Column="1" HorizontalContentAlignment="Stretch"
                           ItemsSource="{Binding Data.PCs.Items}" 
                           SelectedIndex="{Binding Data.PCs.SelectedIndex}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Left" Text="{Binding Name}"/>
                            </DockPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
                       
            <!--[常時]ステータス欄-->
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock Text="{Binding Data.Server.ServerInfo.Status}" />
                </StatusBarItem>
            </StatusBar>

            <GroupBox DockPanel.Dock="Bottom" Header="キャラクター侵蝕率">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox   Grid.Column="0" Text="{Binding Data.PCs.SelectedItem.DodontoFPCData.Resources[2].Value ,StringFormat=' \{0}%'}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" IsReadOnly="True"/>
                    <TextBlock Grid.Column="1" Text="ダイス増加：" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="{Binding Data.PCs.SelectedItem.DodontoFPCData.ErosionDice, StringFormat=' \{0:+0;-0\}'}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                    <TextBlock Grid.Column="3" Text="エフェクトレベル増加：" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="4" Text="{Binding Data.PCs.SelectedItem.DodontoFPCData.ErosionEffectLv, StringFormat=' \{0:+0;-0\}'}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                </Grid>
            </GroupBox>

            <TabControl>

                <!--[タブ]キャラ欄-->
                <TabItem Header="キャラ" FontSize="16">
                    <DockPanel>

                        <!--[タブ][キャラ]新規欄-->
                        <GroupBox DockPanel.Dock="Top" Header="新規" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="10*"  />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <Button     Grid.Row="0" Grid.Column="0" FontSize="13" Content="貼付" Command="{Binding PasteClipboardCommand}" CommandParameter="{Binding ElementName=uMakingPCUrl}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="1" FontSize="13" HorizontalAlignment="Center" ><Hyperlink Command="{Binding JumpToUrlCommand}" CommandParameter="https://charasheet.vampire-blood.net/" ToolTip="https://charasheet.vampire-blood.net/"><Run Text="キャラクター保管所"/></Hyperlink><Run Text=" でXXキャラクターを作成し、URLを貼付する。"/></TextBlock>
                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="URL"  VerticalAlignment="Center" TextAlignment="Right"/>
                                <TextBox    Grid.Row="1" Grid.Column="1" FontSize="13" x:Name="uMakingPCUrl"/>
                                <Button     Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Content="作成" Command="{Binding AddPCFromWebCommand}" CommandParameter="{Binding Text, ElementName=uMakingPCUrl}"/>
                            </Grid>
                        </GroupBox>

                        <!--[タブ][キャラ]キャラ情報欄-->
                        <GroupBox DockPanel.Dock="Top" Header="キャラ情報">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="11*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="名前：" HorizontalAlignment="Right"/>
                                <TextBlock  Grid.Row="1" Grid.Column="0"               HorizontalAlignment="Right"><Hyperlink Command="{Binding JumpToUrlCommand}" CommandParameter="{Binding Data.PCs.SelectedItem.SheetUrl}"><Run Text="URL："/></Hyperlink></TextBlock>
                                <TextBlock  Grid.Row="2" Grid.Column="0" Text="設定：" HorizontalAlignment="Right" />
                                <TextBox    Grid.Row="0" Grid.Column="1" FontSize="13" Text="{Binding Data.PCs.SelectedItem.Name}" />
                                <TextBox    Grid.Row="1" Grid.Column="1" FontSize="13" Text="{Binding Data.PCs.SelectedItem.SheetUrl}"/>
                                <Button     Grid.Row="2" Grid.Column="1" FontSize="13" Content="キャラクター保管所から再読込" Command="{Binding AddPCFromWebCommand}" CommandParameter="{Binding Data.PCs.SelectedItem.SheetUrl}"/>
                                <Button     Grid.Row="3" Grid.Column="1" FontSize="13" Content="どどんとふ上にキャラ作成" Command="{Binding MakePConDodontoFCommand}"/>
                            </Grid>
                        </GroupBox>

                        <!--[タブ][キャラ]キャラ選択・移動削除欄-->
                        <GroupBox Header="キャラ選択・移動・削除"
                                  dd:DragDrop.IsDropTarget="True"
                                  dd:DragDrop.DropHandler="{Binding}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="11*"/>
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <ListBox    Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" HorizontalContentAlignment="Stretch"
                                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                            ItemsSource="{Binding Data.PCs.Items}" 
                                            SelectedIndex="{Binding Data.PCs.SelectedIndex}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Left" Text="{Binding Name}"/>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <Button     Grid.Row="0" Grid.Column="1" Content="↑↑"               Command="{Binding Data.PCs.MoveAtSelectedItemCommand}" CommandParameter="Top"/>
                                <Button     Grid.Row="1" Grid.Column="1" Content="↑"                 Command="{Binding Data.PCs.MoveAtSelectedItemCommand}" CommandParameter="Up"/>
                                <Button     Grid.Row="2" Grid.Column="1" Content="Del"                Command="{Binding RemovePCCommand}"/>
                                <Button     Grid.Row="3" Grid.Column="1" Content="Export&#10;XML"     Command="{Binding ExportPCCommand}" ToolTip="ImportはファイルDragDrop" />
                                <Button     Grid.Row="4" Grid.Column="1" Content="Export&#10;UdoZip"  Command="{Binding ExportUdonaPCCommand}" ToolTip="ユドナリウム用Zipの作成" />
                                <Button     Grid.Row="5" Grid.Column="1" Content="↓"                 Command="{Binding Data.PCs.MoveAtSelectedItemCommand}" CommandParameter="Down"/>
                                <Button     Grid.Row="6" Grid.Column="1" Content="↓↓"               Command="{Binding Data.PCs.MoveAtSelectedItemCommand}" CommandParameter="Bottom"/>
                            </Grid>
                        </GroupBox>
                    </DockPanel>

                </TabItem>

                <TabItem Header="行為">
                    <DockPanel>

                        <!--[タブ][技能]送信データ-->
                        <GroupBox DockPanel.Dock="Top" Header="DodontoFサーバーに送信">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>  <!-- キャプション-->
                                    <ColumnDefinition Width="5*"/>  <!-- ダイス数-->
                                    <ColumnDefinition Width="1.5*"/>   <!-- ダイス数スライダ-->
                                    <ColumnDefinition Width="2*"/>  <!-- DX-->
                                    <ColumnDefinition Width="5*"/>  <!--クリティカル-->
                                    <ColumnDefinition Width="1.5*"/>   <!--クリティカルスライダ-->
                                    <ColumnDefinition Width="5*"/>  <!-- Const -->
                                    <ColumnDefinition Width="1.5*"/>   <!-- Constスライダ -->
                                    <ColumnDefinition Width="2*"/>  <!-- ＞＝ -->
                                    <ColumnDefinition Width="5*"/>  <!--目標値-->
                                    <ColumnDefinition Width="1.5*"/>   <!--目標値スライダ-->
                                    <ColumnDefinition Width="5*"/>  <!--送信-->
                                </Grid.ColumnDefinitions>

                                <!-- Caption -->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="送信：" HorizontalAlignment="Right"  VerticalAlignment="Center" />
                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="判定：" HorizontalAlignment="Right"  VerticalAlignment="Center" />
                                <TextBlock  Grid.Row="2" Grid.Column="0" Text="補正：" HorizontalAlignment="Right" />
                                <TextBlock  Grid.Row="3" Grid.Column="0" Text="侵蝕：" HorizontalAlignment="Right" />

                                <!-- SDice -->
                                <TextBox    Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Data.PCs.SelectedItem.RollDices.SelectedItem.DiceNumber}" TextAlignment="Center"  VerticalContentAlignment="Center" IsReadOnly="True"/>
                                <TextBox    Grid.Row="2" Grid.Column="1"                     Text="{Binding Value, ElementName=uCorrectDiceScrl, Mode=TwoWay, StringFormat='  \{0:+0;-0\}'}" TextAlignment="Center" VerticalContentAlignment="Center" />
                                <ScrollBar  Grid.Row="2" Grid.Column="2" Width="Auto"        x:Name="uCorrectDiceScrl" Value="{Binding Data.PCs.SelectedItem.RollDices.CorrectRollDice.DiceNumber}" SmallChange="1" Maximum="10" Minimum="-10"  RenderTransformOrigin="0.5,0.5" >
                                    <!--CorrectSkillSDice-->
                                    <ScrollBar.RenderTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="180"/>
                                        </TransformGroup>
                                    </ScrollBar.RenderTransform>
                                </ScrollBar>

                                <!-- SBase -->
                                <TextBlock  Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" Text="DX" TextAlignment="Center" VerticalAlignment="Center"/>

                                <TextBox    Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding Data.PCs.SelectedItem.RollDices.SelectedItem.DiceBase}" TextAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
                                <TextBox    Grid.Row="2" Grid.Column="4"                     Text="{Binding Value, ElementName=uCorrectBaseScrl, Mode=TwoWay, StringFormat=' \{0:+0;-0;-0\}'}" TextAlignment="Center" VerticalContentAlignment="Center"/>
                                <ScrollBar  Grid.Row="2" Grid.Column="5" Width="Auto"        x:Name="uCorrectBaseScrl" Value="{Binding Data.PCs.SelectedItem.RollDices.CorrectRollDice.DiceBase}" SmallChange="1" Maximum="1" Minimum="-8"  RenderTransformOrigin="0.5,0.5" >
                                    <!--CorrectSkill.SBase-->
                                    <ScrollBar.RenderTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="180"/>
                                        </TransformGroup>
                                    </ScrollBar.RenderTransform>
                                </ScrollBar>
                                
                                <!-- SConst-->
                                <TextBox    Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2" Text="{Binding Data.PCs.SelectedItem.RollDices.SelectedItem.DiceConst, StringFormat=' \{0:+0;-0\}'}" TextAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
                                <TextBox    Grid.Row="2" Grid.Column="6"                     Text="{Binding Value, ElementName=uCorrectConstScrl, Mode=TwoWay, StringFormat=' \{0:+0;-0\}'}" TextAlignment="Center" VerticalContentAlignment="Center"/>
                                <ScrollBar  Grid.Row="2" Grid.Column="7" Width="Auto"        x:Name="uCorrectConstScrl" Value="{Binding Data.PCs.SelectedItem.RollDices.CorrectRollDice.DiceConst}" SmallChange="1" Maximum="20" Minimum="-20"  RenderTransformOrigin="0.5,0.5" >
                                    <!--CorrectSkill.SConst-->
                                    <ScrollBar.RenderTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="180"/>
                                        </TransformGroup>
                                    </ScrollBar.RenderTransform>
                                </ScrollBar>

                                <!-- SComp-->
                                <TextBlock  Grid.Row="1" Grid.Column="8" Grid.RowSpan="2" Text="&gt;=" TextAlignment="Center" VerticalAlignment="Center"/>

                                <!-- SValue-->
                                <TextBox    Grid.Row="1" Grid.Column="9"  Grid.RowSpan="2" Text="{Binding Value, ElementName=uCorrectValueScrl, Mode=TwoWay}" TextAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
                                <ScrollBar  Grid.Row="1" Grid.Column="10" Grid.RowSpan="2" x:Name="uCorrectValueScrl" Value="{Binding Data.PCs.SelectedItem.RollDices.CorrectRollDice.TargetValue}" Width="Auto" SmallChange="1" Maximum="30" Minimum="0" RenderTransformOrigin="0.5,0.5" LargeChange="5">
                                    <ScrollBar.RenderTransform>
                                        <TransformGroup>
                                            <RotateTransform Angle="180"/>
                                        </TransformGroup>
                                    </ScrollBar.RenderTransform>
                                </ScrollBar>


                                <!-- SSend-->
                                <TextBox    Grid.Row="0" Grid.Column="1" Text="{Binding Data.PCs.SelectedItem.RollDices.SendingText, Mode=OneWay}" x:Name="uSendingDiceRollText" VerticalContentAlignment="Center" Grid.ColumnSpan="10" Background="#FFFBECFB"/>
                                <Button     Grid.Row="0" Grid.Column="11" Grid.RowSpan="3" Content="送信"   Command="{Binding SendDiceRollCommand}" CommandParameter="{Binding Text, ElementName=uSendingDiceRollText}"/>
                                <Button     Grid.Row="4" Grid.Column="11" Grid.RowSpan="1" Content="CLR"    Command="{Binding Data.PCs.SelectedItem.RollDices.ResetAllCorrectionCommand}" />


                                <!--侵蝕補正-->
                                <TextBox    Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Data.PCs.SelectedItem.DodontoFPCData.ErosionDice, Mode=OneWay, StringFormat=' \{0:+0;-0\}  '}" TextAlignment="Center"  VerticalContentAlignment="Center" IsReadOnly="True"/>
                                
                                <!-- 設定項目-->
                                <CheckBox   Grid.Row="5" Grid.Column="5" Grid.ColumnSpan="3" Content="シークレット" IsChecked="{Binding Data.IsSeacretDice}"                                     VerticalAlignment="Center"/>
                                <CheckBox   Grid.Row="5" Grid.Column="9" Grid.ColumnSpan="2" Content="目標値"       IsChecked="{Binding Data.PCs.SelectedItem.RollDices.IsVissibleTargetValue}"  VerticalAlignment="Center"/>

                            </Grid>

                        </GroupBox>
                        
                        <GroupBox  Header="行為選択">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <ListBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="6"
                                         HorizontalContentAlignment="Stretch"
                                         ScrollViewer.VerticalScrollBarVisibility="Visible"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ItemsSource="{Binding Data.PCs.SelectedItem.RollDices.Items}"
                                         SelectedIndex="{Binding Data.PCs.SelectedItem.RollDices.SelectedIndex}"
                                         >
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="15"/>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="15"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="15"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="◇"                     Grid.Column="0" TextAlignment="Center"/>
                                                <TextBox   Text="{Binding DiceNumber}"   Grid.Column="1" TextAlignment="Center"/>
                                                <TextBlock Text="DX"                     Grid.Column="2" TextAlignment="Center"/>
                                                <TextBox   Text="{Binding DiceBase}"     Grid.Column="3" TextAlignment="Center"/>
                                                <TextBlock Text="+"                      Grid.Column="4" TextAlignment="Center"/>
                                                <TextBox   Text="{Binding DiceConst}"    Grid.Column="5" TextAlignment="Center"/>
                                                <TextBlock Text=" ["                     Grid.Column="6" TextAlignment="Center"/>
                                                <TextBox   Text="{Binding RollGroup}"    Grid.Column="7" TextAlignment="Center"/>
                                                <TextBlock Text="] "                     Grid.Column="8" TextAlignment="Center"/>
                                                <TextBox   Text="{Binding RollName}"     Grid.Column="9" TextAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </GroupBox>
                    </DockPanel>

                </TabItem>
                
                <TabItem Header="戦闘">
                    <DockPanel>
                        <GroupBox DockPanel.Dock="Top" Header="コスト消費" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="送信：" TextAlignment="Right" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Action：" TextAlignment="Right" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="HP："     TextAlignment="Right" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="侵蝕：" TextAlignment="Right" VerticalAlignment="Center"/>

                                <TextBox   Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Text="{Binding Data.PCs.SelectedItem.SendingCostText,Mode=OneWay}" x:Name="uSendingCost"  IsReadOnly="True" VerticalContentAlignment="Center" Background="#FFFBECFB"/>
                                <CheckBox  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Content="メジャーアクション(コンボ用)" VerticalAlignment="Center"
                                           IsChecked="{Binding Data.PCs.SelectedItem.TargetECCost.IsMajor}" IsEnabled="{Binding Data.PCs.SelectedItem.IsCombo}"/>
                                <TextBlock Grid.Row="1" Grid.Column="4" Text="※使用法※" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFD0F3EF" ToolTipService.ShowDuration="1000000">
                                    <TextBlock.ToolTip>
                                        <TextBlock>
                                            ◇◇コンボ使用法◇◇ <LineBreak/>
                                            <LineBreak/>
                                            ①マイナーアクション時 <LineBreak/>
                                            　・使用するコンボを選択 <LineBreak/>
                                            　・[コスト消費]の[□メジャーアクション]のチェックを外す(マイナーアクション)<LineBreak/>
                                            　・コンボに登録されているマイナーアクション分のコストが表示されていることを確認し[コスト送信]<LineBreak/>
                                            <LineBreak/>
                                            ②メジャーアクション時 <LineBreak/>
                                            　・使用するコンボを選択 <LineBreak/>
                                            　・[メジャー行為]で各種補正を行った後、[行為送信]。 <LineBreak/>
                                            　・[ダメージ算出]の[達成値:]を押して達成値を受信。 <LineBreak/>
                                            　・必要に応じ達成値・ダメージ固定値の補正を行い、[ダメージ送信] <LineBreak/>
                                            　・[コスト消費]の[□メジャーアクション]にチェックを入れる <LineBreak/>
                                            　・コンボに登録されているメジャーアクション分のコストが表示されていることを確認し[コスト送信]
                                        </TextBlock>
                                    </TextBlock.ToolTip>
                                </TextBlock>

                                <!--現在値-->
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Data.PCs.SelectedItem.DodontoFPCData.Resources[0].Value, Mode=OneWay}" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Data.PCs.SelectedItem.DodontoFPCData.Resources[2].Value, Mode=OneWay}" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                                
                                <!--補正値-->
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding Data.PCs.SelectedItem.TargetECCost.CostHP, Mode=OneWay, StringFormat='\{0:-0;+0\}'}" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                                <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding Data.PCs.SelectedItem.TargetECCost.CostErosion, Mode=OneWay,  StringFormat='\{0:+0;-0\}'}" IsReadOnly="True" HorizontalContentAlignment="Center"/>

                                <TextBlock Grid.Row="2" Grid.Column="3" Text="→" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="3" Grid.Column="3" Text="→" HorizontalAlignment="Center"/>
                                
                                <!--送信値-->
                                <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding Data.PCs.SelectedItem.SendingHP, Mode=OneWay}" IsReadOnly="True" HorizontalContentAlignment="Center"  Background="#FFFBECFB"/>
